---
import Logo from './Logo.astro'
---

<nav
	id="navbar"
	class="[&.onTop]:bg-transparent bg-black/80 transition-color duration-1000 fixed top-0 w-full z-20 py-6 px-20 flex items-center justify-between onTop"
>
	<Logo />
	<ul class="text-white flex list-none gap-12 [&>.active]:text-primary-400">
		<li class="active">Inicio</li>
		<li>Productos</li>
		<li>Servicios</li>
		<li>Cont√°ctanos</li>
	</ul>
</nav>

<script>
	const nav = document.querySelector('#navbar')

	window.addEventListener('scroll', () => {
		if (!nav) return
		const bounds = nav.getBoundingClientRect()

		const onTop = Math.abs(bounds.top - window.scrollY) > window.innerHeight - 112
		if (onTop) {
			nav.classList.remove('onTop')
		} else {
			nav.classList.add('onTop')
		}
	})
</script>
